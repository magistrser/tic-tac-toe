{
    "extends": "@tsconfig/node16/tsconfig.json",
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "target": "es2019",
        "jsx": "react",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "./dist/",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "lib": ["dom"],
        "baseUrl": ".",
        "paths": {
            "src/*": ["src/*"]
        }
    },
    "exclude": ["./src/server", "./src/**/*.test.ts", "./src/**/*.test.tsx"]
}
